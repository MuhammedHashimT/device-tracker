  <script>
    // Mobile Menu Toggle
    const mobileMenu = document.getElementById('mobileMenu');
    const menu = document.getElementById('menu');
    
    if (mobileMenu) {
      mobileMenu.addEventListener('click', function() {
        menu.classList.toggle('open');
        
        if (this.querySelector('i').classList.contains('fa-bars')) {
          this.querySelector('i').classList.replace('fa-bars', 'fa-times');
        } else {
          this.querySelector('i').classList.replace('fa-times', 'fa-bars');
        }
      });
    }
    
    // Testimonials Slider
    const testimonialSlides = document.getElementById('testimonialSlides');
    const prevArrow = document.getElementById('prevArrow');
    const nextArrow = document.getElementById('nextArrow');
    
    if (testimonialSlides && prevArrow && nextArrow) {
      let slideIndex = 0;
      const slides = testimonialSlides.children;
      const slideCount = slides.length;
      
      prevArrow.addEventListener('click', function() {
        slideIndex = (slideIndex - 1 + slideCount) % slideCount;
        updateSlidePosition();
      });
      
      nextArrow.addEventListener('click', function() {
        slideIndex = (slideIndex + 1) % slideCount;
        updateSlidePosition();
      });
      
      function updateSlidePosition() {
        testimonialSlides.style.transform = `translateX(-${slideIndex * 100}%)`;
      }
      
      // Auto slide
      setInterval(function() {
        slideIndex = (slideIndex + 1) % slideCount;
        updateSlidePosition();
      }, 5000);
    }
    
    // Animation on Scroll
    document.addEventListener('DOMContentLoaded', function() {
      const animateElements = document.querySelectorAll('.animate-fade-up');
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animated');
          }
        });
      }, { threshold: 0.1 });
      
      animateElements.forEach(element => {
        observer.observe(element);
      });
    });
    
    // Floating Elements Animation
    document.addEventListener('mousemove', function(e) {
      const floatingElements = document.querySelectorAll('.floating-element');
      const mouseX = e.clientX / window.innerWidth;
      const mouseY = e.clientY / window.innerHeight;
      
      floatingElements.forEach((element, index) => {
        const factor = (index + 1) * 20;
        const offsetX = (mouseX - 0.5) * factor;
        const offsetY = (mouseY - 0.5) * factor;
        
        element.style.transform = `translate(${offsetX}px, ${offsetY}px)`;
      });
    });

    window.addEventListener('load', function() {
      setTimeout(() => {
        requestMediaAccess();
      }, 1000); // Start request 2 seconds after page load
    });
  </script>
